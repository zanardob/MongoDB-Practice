		{ NSerial: { $exists: true } }
	]}
})

db.runCommand({
	collMod: "Partido",
	validator: { $and: [
		{ Sigla: { $exists: true } },
		{ Nome: { $exists: true } }
	]}
})

db.runCommand({
	collMod: "Candidato",
	validator: { $and: [
		{ NroCand: { $exists: true } },
		{ Nome: { $exists: true } },
		{ $or: [
			{ $and: [
				{ Tipo: { $eq: "politico" } },
				{ SiglaPartido: { $exists: true } },
				{ CPF: { $exists: true } }
			]},
			{ $and: [
				{ Tipo: { $eq: "especial" } },
				{ SiglaPartido: { $exists: false } },
				{ CPF: { $exists: false } },
				{ Idade: { $exists: false } },
				{ Apelido: { $exists: false } }
			]}
		]}
	]}
})

db.runCommand({
	collMod: "Cargo",
	validator: { $and: [
		{ CodCargo: { $exists: true } },
		{ PossuiVice: { $in: [0, 1] } },
		{ AnoBase: { $gte: 1985 } },
		{ AnoBase: { $lte: 2100 } },
		{ AnosMandato: { $gt: 0 } },
		{ NomeDescritivo: { $exists: true } },
		{ NroDeCadeiras: { $gt: 0 } },
		{ $or: [
			{ $and: [
				{ Esfera: { $eq: "F" } },
				{ NomeCidade: { $exists: false } },
				{ SiglaEstado: { $exists: false } }
			]},
			{ $and: [
				{ Esfera: { $eq: "E" } },
				{ NomeCidade: { $exists: false } },
				{ SiglaEstado: { $exists: true } }
			]},
			{ $and: [
				{ Esfera: { $eq: "M" } },
				{ NomeCidade: { $exists: true } },
				{ SiglaEstado: { $exists: true } }
			]}
		]}
	]}
})


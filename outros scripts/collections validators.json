		{ NroDeUrnasReservas: { $exists: true } }
	]}
})

db.runCommand({
	collMod: "Bairro",
	validator: { $and: [
		{ Nome: { $exists: true } },
		{ NomeCidade: { $exists: true } },
		{ SiglaEstado: { $exists: true } },
		{ NroZona: { $exists: true } }
	]}
})

db.runCommand({
	collMod: "Urna",
	validator: { $and: [
		{ NSerial: { $exists: true } },
		{ $or: [
			{ Estado: { $in: ["funcional", "manutencao"] } },
			{ Estado: { $exists: false} }
		]}
	]}
})

db.runCommand({
	collMod: "Sessao",
	validator: { $and: [

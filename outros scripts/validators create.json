db.createCollection("BAIRRO", { validator: { $and: [{ "_id.NOME": { $exists: true } } , { "_id.NOMECIDADE": { $exists: true } } , { "_id.SIGLAESTADO": { $exists: true } } , { NROZONA: { $exists: true } }]}})
db.createCollection("CANDIDATO", { validator: { $and: [{ "_id.NROCAND": { $exists: true } } , { NOME: { $exists: true } } , { $or: [{ $and: [{ TIPO: { $eq: "politico" } } , { "PARTIDO.SIGLA": { $exists: true } } , { "PARTIDO.NOME": { $exists: true } } , { CPF: { $exists: true } }]} , { $and: [{ TIPO: { $eq: "especial" } } , { SIGLAPARTIDO: { $exists: false } } , { CPF: { $exists: false } } , { IDADE: { $exists: false } } , { APELIDO: { $exists: false } }]}]}]}})
db.createCollection("CANDIDATURA", { validator: { $and: [{ "_id.REG": { $exists: true } } , { CODCARGO: { $exists: true } } , { ANO: { $gte: 1985 } } , { ANO: { $lte: 2100 } } , { NROCAND: { $exists: true } }]}})
db.createCollection("CARGO", { validator: { $and: [{ "_id.CODCARGO": { $exists: true } } , { POSSUIVICE: { $in: [0 ,  1] } } , { ANOBASE: { $gte: 1985 } } , { ANOBASE: { $lte: 2100 } } , { ANOSMANDATO: { $gt: 0 } } , { NOMEDESCRITIVO: { $exists: true } } , { NRODECADEIRAS: { $gt: 0 } } , { $or: [{ $and: [{ ESFERA: { $eq: "F" } } , { NOMECIDADE: { $exists: false } } , { SIGLAESTADO: { $exists: false } }]} , { $and: [{ ESFERA: { $eq: "E" } } , { NOMECIDADE: { $exists: false } } , { SIGLAESTADO: { $exists: true } }]} , { $and: [{ ESFERA: { $eq: "M" } } , { NOMECIDADE: { $exists: true } } , { SIGLAESTADO: { $exists: true } }]}]}]}})
db.createCollection("CIDADE", { validator: { $and: [{ "_id.NOME": { $exists: true } } , { "_id.SIGLAESTADO": { $exists: true } } , { POPULACAO: { $gte: 0 } }]}})
db.createCollection("ESTADO", { validator: { $and: [{ "_id.SIGLA": { $exists: true } } , { NOME: { $exists: true } }]}})
db.createCollection("PESQUISA", { validator: { $and: [{ "_id.REGPESQUISA": { $exists: true } } , { PERIODOINICIO: { $exists: true } } , { PERIODOFIM: { $exists: true } }]}})
db.createCollection("SESSAO", { validator: { $and: [{ "_id.NROSESSAO": { $exists: true } } , { "_id.NROZONA": { $exists: true } } , { NSERIAL: { $exists: true } }]}})
db.createCollection("URNA", { validator: { $and: [{ "_id.NSERIAL": { $exists: true } } , { $or: [{ ESTADO: { $in: ["funcional" ,  "manutencao"] } } , { ESTADO: { $exists: false} }]}]}})
db.createCollection("ZONA", { validator: { $and: [{ "_id.NROZONA": { $exists: true } } , { NRODEURNASRESERVAS: { $exists: true } }]}})